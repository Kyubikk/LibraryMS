@page "{id:int}"
@model LoginSystemApp.Pages.Books.DeleteModel

<h2>Delete Book</h2>

<p>Are you sure you want to delete the book titled "<strong>@Model.Book.Title</strong>"?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
