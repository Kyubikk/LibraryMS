<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginSystemApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/favicon-new.ico">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Move jQuery before Select2 -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    
    @RenderSection("Styles", required: false)
    <style>
        .navbar-nav .nav-link:hover {
            background-color: #dff6eb; /* Màu nền khi hover */
            transition: all 0.3s ease; /* Hiệu ứng chuyển đổi mượt */
        }
        html, body {
            height: 100%;  /* Đảm bảo body chiếm 100% chiều cao */
            margin: 0;     /* Loại bỏ margin mặc định */
            display: flex; /* Sử dụng flexbox để kiểm soát bố cục */
            flex-direction: column; /* Đặt hướng các phần tử theo chiều dọc */
        }

        main {
            flex-grow: 1; /* Đảm bảo nội dung chính chiếm hết không gian còn lại */
        }

        footer {
            margin-top: auto; /* Đẩy footer xuống cuối */
            padding-top: 20px; /* Thêm khoảng cách trên cho footer */
            background-color: #f8f9fa; /* Màu nền cho footer */
            text-align: center; /* Căn giữa nội dung trong footer */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-sm">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/logo.png" alt="VNUIS LMS" style="height: 80px;">
                </a>

                <!-- Toggle button for mobile view -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Books/Index">
                                <i class="bi bi-book-half"></i> Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Authors/Index">
                                <i class="bi bi-pen"></i> Authors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Categories/Index">
                                <i class="bi bi-tags"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Publishers/Index">
                                <i class="bi bi-building"></i> Publishers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/BorrowReturn/Index">
                                <i class="bi bi-arrow-repeat"></i> Borrow/Return
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Privacy">
                                <i class="bi bi-shield-lock"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Check if the user is logged in -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Show Logout button -->
                            <li class="nav-item">
                                <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Show Login button -->
                            <li class="nav-item">
                                <a class="nav-link text-secondary fw-medium" asp-area="" asp-page="/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top: 50px;">
       <main role="main" class="pb-3" style="flex-grow: 1; height: auto;">
            @RenderBody()
        </main>
        <div style="height: 200px;"></div>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - VNUIS LMS - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
