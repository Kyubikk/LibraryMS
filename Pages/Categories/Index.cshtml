@page
@model LoginSystemApp.Pages.Categories.IndexModel

<h2>Category List</h2>

<a asp-page="./Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add New Category
</a>

@if (!Model.Categories.Any())
{
    <p>No categories available.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 90%;">Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
