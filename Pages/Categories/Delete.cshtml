@page "{id:int}"
@model LoginSystemApp.Pages.Categories.DeleteModel

<h2>Delete Category</h2>

<p>Are you sure you want to delete the category named "<strong>@Model.Category.CategoryName</strong>"?</p>

<p><strong>Note:</strong> Deleting this category might affect all related books.</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
